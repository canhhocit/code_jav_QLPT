<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/pink"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.QLkhachthue_trang.qlkhachthue_activity_dstt">

    <!-- Thanh trên: nút back + tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/khachthue_imgbtn_back"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/arrow_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Danh sách khách thuê"
            android:textColor="@color/purple"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>
        <Space
            android:layout_width="35dp"
            android:layout_height="35dp"/>
    </LinearLayout>

    <!-- Ô tìm kiếm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

    <Space
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/khachthue_edt_timkiem"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/white_bg"
        android:drawableEnd="@drawable/search_icon"
        android:ems="10"
        android:hint="Tìm kiếm..."
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp" />
    </LinearLayout>
    <!-- Hàng tiêu đề cột -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@color/lightpurple"
        android:orientation="horizontal"
        android:weightSum="6.5"
        android:paddingVertical="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Họ tên"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Giới tính"
            android:gravity="center"
            android:layout_marginLeft="8dp"

            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Ngày sinh"
            android:layout_marginLeft="8dp"

            android:gravity="center"
            android:textStyle="bold"/>
<Space
    android:layout_width="0dp"
    android:layout_weight="0.3"
    android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phòng"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Danh sách khách thuê -->

    <ListView
        android:id="@+id/khachthue_list_khachthue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="3dp"
        tools:listitem="@layout/qlkhachthue_itemlistview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/khachthue_btn_themkhachthue"
            style="@android:style/Widget.Button"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="end"
            android:background="@drawable/purple_bg"
            android:foreground="@drawable/baseline_add_24"
            android:backgroundTint="@color/purple"
            android:foregroundTint="#FFFFFF"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
