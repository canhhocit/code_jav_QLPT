<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".ui.QLkhachthue_trang.qlkhachthue_activity_chucnang">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ng2">


            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/arrow_back" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/ng2"
            android:padding="20dp">

            <ImageView
                android:id="@+id/image_pro5"
                android:layout_width="211dp"
                android:layout_height="134dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="70dp"
                android:src="@drawable/pro5" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Họ và tên:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/khachthue_edt_hoten"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="text"
                android:hint="Your Name"
                android:textSize="23dp"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Giới tính:"
            android:textSize="23sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/khachthue_rdogroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton

                android:id="@+id/khachthue_radioNam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:layout_marginRight="40dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/khachthue_radioNu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Ngày sinh:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="dd/mm/yyy">

                <EditText
                    android:id="@+id/khachthue_edt_ngaysinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="false"
                    android:textAlignment="center"
                    android:padding="12dp"
                    android:drawableStart="@drawable/calender"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="SĐT:"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/khachthue_edt_sdt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0123456789"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="3dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Địa chỉ:"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/khachthue_edt_diachi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ninh Binh"
            android:inputType="text"
            android:importantForAutofill="no"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="Phòng:"
                android:textSize="23sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/khachthue_edt_phong"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="101"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="23dp"
                android:textStyle="bold" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/khachthue_btnSua"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#099578"
            android:text="Sửa" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/khachthue_btnThem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#099578"
            android:text="Thêm" />

    </LinearLayout>


</LinearLayout>