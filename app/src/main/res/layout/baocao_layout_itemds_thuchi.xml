<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/surface_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/surface_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:weightSum="6">

                        <TextView
                            android:id="@+id/baocao_tv_tenthuchi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Gà chạy bộ"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:ellipsize="end"
                            android:maxLines="2" />

                        <TextView
                            android:id="@+id/baocao_tv_sotien"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1.5"
                            android:text="200,000"
                            android:textColor="@color/primary_green"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/baocao_tv_loaithuchi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_weight="1"
                            android:text="Thu"
                            android:textColor="@color/success"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/baocao_tv_ngaythuchi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_weight="2"
                            android:text="23/09/2030"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                </LinearLayout>

                <!-- Subtle bottom accent line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/light_mint" />
        </LinearLayout>
</androidx.cardview.widget.CardView>