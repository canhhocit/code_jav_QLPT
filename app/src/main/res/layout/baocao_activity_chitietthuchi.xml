<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainbaocao_chitietthuchi"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ECEFF1"
    tools:context=".ui.QLbaocao_canh.baocao_activity_chitietthuchi">

    <TextView
        android:id="@+id/baocao_chitietthuchi_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết phiếu thu/chi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#37474F"
        android:textSize="29dp"
        android:drawableStart="@drawable/arrow_back"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/baocao_edt_tenthuchi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="text"
        android:textColor="#37474F"
        android:textSize="18sp"
        android:textAlignment="center"
        android:hint="Tên khoản thu/chi"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:drawableLeft="@drawable/khoanchi"
        />

    <EditText
        android:id="@+id/baocao_edt_sotien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#37474F"
        android:inputType="number"
        android:textSize="18sp"
        android:textAlignment="center"
        android:hint="Số tiền"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:drawableStart="@drawable/money"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại:"
            android:textColor="#455A64"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <RadioGroup
            android:id="@+id/baocao_rdogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/baocao_rdo_thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Thu"
                android:textColor="#37474F"/>

            <RadioButton
                android:id="@+id/baocao_rdo_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:text="Chi"
                android:textColor="#37474F"/>

        </RadioGroup>
    </LinearLayout>

        <EditText
            android:id="@+id/baocao_edt_ngaythuchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="18dp"
            android:textColor="#37474F"
            android:focusable="false"
            android:textAlignment="center"
            android:padding="12dp"
            android:drawableStart="@drawable/calender"
            android:hint="Ngay"
            android:enabled="false"/>

        <Button
            android:id="@+id/baocao_thuchi_btnsua"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="18dp"

            />

        <Button
            android:id="@+id/baocao_thuchi_btnthem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Thêm"
            android:textSize="18dp" />


</LinearLayout>
