<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightpurple"
    android:padding="10dp"
    tools:context=".ui.Account.account_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_arrowback_account"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_back"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/graygreen"
        android:textAlignment="center"/>
        <Space
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    </LinearLayout>
    <EditText
        android:id="@+id/acc_edtUsername"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_border_green_circle"
        android:hint="Username"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/acc_edtPassword"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_border_green_circle"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/acc_btnThem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#099578"
        android:text="Táº¡o"/>



    <ListView
        android:id="@+id/acc_lvUser"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:background="@drawable/bg_border_green_circle"
        android:dividerHeight="2dp"
        tools:listitem="@layout/layout_account_item"/>
</LinearLayout>