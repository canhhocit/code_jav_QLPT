<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_item_NameService_SD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="18dp" android:text="Tên dịch vụ" />

    <TextView
        android:id="@+id/txt_item_PriceService_SD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:textSize="18dp"
        android:layout_marginRight="12dp"
        android:text="10000" />

    <ImageButton
        android:id="@+id/btn_item_edit_Service_SD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="@color/darkpurple"
        android:contentDescription="Sửa"
        android:src="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/btn_item_delete_Service_SD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Xóa"
        android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>
