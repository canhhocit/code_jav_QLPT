<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#ffe5e5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_green_circle"
        android:padding="14dp"
        android:orientation="vertical">


    <EditText
        android:id="@+id/edt_Name_OtherService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên dịch vụ"
        android:layout_marginBottom="12dp"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_Price_OtherService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá dịch vụ"
        android:textSize="20dp"
        android:inputType="number"
        android:padding="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back_OtherService"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:backgroundTint="#099578"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textSize="19dp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_update_OtherService"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:backgroundTint="#099578"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:textSize="19dp" />

    </LinearLayout>
</LinearLayout>
