<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#FFE5E5"
    android:padding="16dp">

    <EditText
        android:id="@+id/edt_Name_OtherService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên dịch vụ"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_Price_OtherService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá dịch vụ"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <Button
            android:id="@+id/btn_back_OtherService"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textSize="19dp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update_OtherService"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Cập nhật"
            android:textSize="19dp" />

    </LinearLayout>
</LinearLayout>
