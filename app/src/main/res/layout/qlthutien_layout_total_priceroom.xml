<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_border_green_circle"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/edt_date_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="27/09/2025"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:clickable="true"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin điện nước cũ"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edt_oldElectric_totalPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Số điện cũ"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/edt_oldWater_totalPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Số nước cũ"
                    android:inputType="number"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hình điện cũ"
                            android:gravity="center"
                        android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imga_oldElectric_totalPrice"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_camera"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgb_oldElectric_totalPrice"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình nước cũ"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imga_oldWater_totalPrice"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_camera"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgb_oldWater_totalPrice"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin điện nước mới"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/edt_newElectric_totalPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Số điện mới"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/edt_newWater_totalPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Số nước mới"
                    android:inputType="number"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình điện mới"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imga_newElectric_totalPrice"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_camera"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgb_newElectric_totalPrice"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình nước mới"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/imga_newWater_totalPrice"
                            android:layout_width="53dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_camera"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgb_newWater_totalPrice"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:background="#E0E0E0"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Tiền dịch vụ khác"
                android:textStyle="bold" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiền phòng" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Ghi chú"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_note_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ghi chú" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Số sử dụng"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Giá"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>


            <TextView
                android:id="@+id/txt_sumPrice_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: 0"

                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btn_createBill_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạo hóa đơn"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
