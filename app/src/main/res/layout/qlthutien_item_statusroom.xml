<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E7FFE2"
        android:padding="7dp"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtItemDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:text="12/12/2023"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtItemRoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:gravity="start"
            android:layout_marginLeft="7dp"
            android:text="102"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:gravity="start"
            android:paddingLeft="6dp"
            android:text="2.000.000"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgItemStatus"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_weight="1"
            android:src="@drawable/img_wrong"></ImageView>

        <ImageView
            android:id="@+id/iconMoreOption"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="0.6"
            android:gravity="end"
            android:focusableInTouchMode="false"
            android:src="@drawable/img_threedot" />

    </LinearLayout>

</LinearLayout>