<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainchucnanghopdong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe5e5"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.QLhopdong_y.hopdong_activity_chucnang">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="29dp"

        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/darkpurple"
        android:text="BẢN ĐĂNG KÝ HỢP ĐỒNG" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_border_green_circle"
        android:layout_marginTop="15dp"
       >

        <TextView
            android:id="@+id/tvphong"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Phòng"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/hopdong_edt_phong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="101"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="32dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvhotenkh"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Họ Tên KH" />

        <EditText
            android:id="@+id/hopdong_edt_hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="nhập hoten"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvsdt"
            android:layout_width="150dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="SDT" />

        <EditText
            android:id="@+id/hopdong_edt_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvcccd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="CCCD" />

        <EditText
            android:id="@+id/hopdong_edt_cccd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:ems="10"
            android:textColor="@color/black"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvngaysinh"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh" />



        <EditText
            android:id="@+id/hopdong_edt_ngaysinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="false"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:drawableStart="@drawable/calender"
            android:enabled="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_border_green_circle"
        android:layout_marginTop="15dp">


        <TextView
            android:id="@+id/tvtghd"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Ngày Ký Hợp Đồng"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="dd/mm/yyy">

            <EditText
                android:id="@+id/hopdong_edt_ngayky"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="false"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/calender"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">



    <Button
        android:id="@+id/hopdong_btnsua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#099578"
        android:text="Sửa" />

    <Button
        android:id="@+id/hopdong_btnxoa"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:backgroundTint="#099578"
        android:text="Xóa" />
    </LinearLayout>

    <Button
        android:id="@+id/hopdong_btnthem"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#099578"
        android:text="Thêm" />
</LinearLayout>