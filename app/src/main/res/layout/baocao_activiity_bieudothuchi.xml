<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_cream"
    tools:context=".ui.QLbaocao_canh.baocao_activiity_bieudothuchi">

    <!-- Header Background -->
    <View
        android:id="@+id/header_bg"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:background="@color/primary_green"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Menu Icon -->
    <TextView
        android:id="@+id/baocao_bieudothuchi_tvmenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/menu"
        android:drawablePadding="8dp"
        android:text=""
        android:elevation="5dp"
        android:drawableTint="@color/white"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Biểu đồ thống kê"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Chart Chi -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/surface_white"
                    android:padding="16dp">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/baocao_bieudochi"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Biểu đồ Chi theo tháng"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableStart="@drawable/chart_icon"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/error" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Chart Thu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/surface_white"
                    android:padding="16dp">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/baocao_bieudothu"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Biểu đồ Thu theo tháng"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:drawableStart="@drawable/chart_icon"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/success" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/baocao_bieudothuchi_lnnam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_mint"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chọn năm xem"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/border_green"
                        android:layout_marginBottom="8dp" />

                    <ListView
                        android:id="@+id/baocao_bieudothuchi_listviewnam"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@color/surface_white"
                        android:divider="@color/divider_green"
                        android:dividerHeight="1dp"
                        android:padding="8dp" />
                </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
