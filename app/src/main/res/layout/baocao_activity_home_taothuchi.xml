<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QLbaocao_canh.baocao_activity_homebc"
    android:background="#E1E6E9">

    <TabHost
        android:id="@+id/baocao_tabhost_thuchi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#455A64"
                android:divider="@null"
                android:showDividers="none"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:clipToPadding="false" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FAFAFA"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/tab_thuchi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FAFAFA">
                    <include layout="@layout/baocao_layout_taophieuthuchi" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabthemchitieu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FAFAFA">
                    <include layout="@layout/baocao_layout_dsthuchi" />
                </LinearLayout>



            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
