<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_cream"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bar Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/surface_white"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Biểu đồ doanh thu"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/chart_icon"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/primary_green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/border_green"
                    android:layout_marginBottom="12dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/baocao_barChartDT"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@color/surface_white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Year List Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint_cream"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/baocao_btn_thuchi"
                android:layout_width="150dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/emerald"
                android:elevation="0dp"
                android:text="Thu/chi"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/baocao_btn_file"
                android:layout_width="150dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/primary_green"
                android:elevation="0dp"
                android:text="File"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/baocao_doanhthu_lnNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/light_mint"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh sách các năm"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/border_green"
                    android:layout_marginBottom="8dp" />

                <ListView
                    android:id="@+id/baocao_doanhthu_listnamdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface_white"
                    android:divider="@color/primary_green_dark"
                    android:dividerHeight="1dp"
                    android:padding="8dp" />
            </LinearLayout>


    </LinearLayout>
</ScrollView>