<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="12dp">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/baocao_barChartDT"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/baocao_lv_namdt"
        android:layout_width="398dp"
        android:layout_height="163dp"
        android:layout_marginTop="32dp"
        android:divider="#1F1B1B"
        android:dividerHeight="2dp"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/baocao_btn_taothuchi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baocao_barChartDT"
        app:layout_constraintVertical_bias="0.298" />

    <Button
        android:id="@+id/baocao_btn_taothuchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#546E7A"
        android:padding="12dp"
        android:text="Tạo phiếu thu/chi"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baocao_lv_namdt"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
