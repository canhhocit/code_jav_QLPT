<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe5e5"
    android:orientation="vertical"

    android:padding="10dp">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/baocao_barChartDT"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#FFFFFF"
        android:elevation="2dp" />

    <ListView
        android:id="@+id/baocao_doanhthu_listnamdt"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_border_green_circle"
        android:divider="#1F1B1B"
        android:dividerHeight="1dp"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/baocao_btn_thuchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#099578"
            android:padding="12dp"
            android:text="Thu/chi"
            android:textSize="20dp" />

        <Button
            android:id="@+id/baocao_btn_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="12dp"
            android:backgroundTint="#099578"
            android:text="File"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
