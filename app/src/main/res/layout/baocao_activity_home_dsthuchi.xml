<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maindsthuchi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mint_cream"
    tools:context=".ui.QLbaocao_canh.baocao_activity_homedsthuchi">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_green"
        android:orientation="vertical"
        android:elevation="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/baocao_dsthuchi_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách thu/chi"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:drawableStart="@drawable/arrow_back"
            android:drawablePadding="16dp"
            android:letterSpacing="0.05" />
    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search Bar với viền đẹp -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface_white"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/baocao_dsthuchi_tvmenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:drawableStart="@drawable/menu"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <EditText
                    android:id="@+id/baocao_dsthuchi_edt_timkiem"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/search_icon"
                    android:drawablePadding="12dp"
                    android:hint="Nhập tên/ngày..."
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:id="@+id/layout_baocao_dsthuchi_loc_sapxep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_green_circle"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Loại: "
                        android:layout_gravity="center"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/baocao_dsthuchi_rdogr_locthuchi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdothu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="Thu"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdochi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="Chi"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/border_green"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Sắp\nxếp:"
                        android:layout_gravity="center"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/baocao_dsthuchi_rdogr_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdo_moneyASC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="↑ Số tiền"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdo_moneyDSC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="↓ Số tiền"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />
                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/baocao_dsthuchi_rdogr_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdo_dateASC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="↑ Ngày"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/baocao_dsthuchi_rdo_dateDSC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/primary_green"
                            android:text="↓ Ngày"
                            android:textColor="@color/text_secondary"
                            android:textSize="15sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Table Header với viền -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_green"
                android:orientation="horizontal"
                android:padding="12dp"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="Tên mục" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="1.5"
                    android:text="Số tiền" />

                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_marginStart="7dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Loại" />

                <TextView
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_weight="2"
                    android:layout_marginStart="7dp"
                    android:text="Ngày" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ListView -->
        <ListView
            android:id="@+id/baocao_listv_dsthuchi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/divider_green"
            android:dividerHeight="8dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            tools:listitem="@layout/baocao_layout_itemds_thuchi"/>
    </LinearLayout>
</LinearLayout>