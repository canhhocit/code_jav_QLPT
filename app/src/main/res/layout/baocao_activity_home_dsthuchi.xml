<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maindsthuchi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.QLbaocao_canh.baocao_activity_homedsthuchi"
    android:background="#ffe5e5">

    <TextView
        android:id="@+id/baocao_dsthuchi_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách thu/chi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/darkpurple"
        android:textSize="29dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/arrow_back"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/baocao_dsthuchi_tvmenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:drawableStart="@drawable/menu" />

        <EditText
            android:id="@+id/baocao_dsthuchi_edt_timkiem"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:layout_marginLeft="75dp"
            android:drawableEnd="@drawable/search_icon"
            android:ems="10"
            android:hint="Nhập tên/ngày..."
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_baocao_dsthuchi_loc_sapxep"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_border_green_circle"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Loại: " />

        <RadioGroup
            android:id="@+id/baocao_dsthuchi_rdogr_locthuchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdothu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Thu" />

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdochi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Chi" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Sắp xếp:" />

        <RadioGroup
            android:id="@+id/baocao_dsthuchi_rdogr_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdo_moneyASC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="↑ Số tiền" />

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdo_moneyDSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↓ Số tiền"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/baocao_dsthuchi_rdogr_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdo_dateASC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="↑ Ngày" />

            <RadioButton
                android:id="@+id/baocao_dsthuchi_rdo_dateDSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="↓ Ngày" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_border_green_circle"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text="Tên mục" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1.5"

            android:text="Số tiền" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:textSize="17dp"
            android:layout_marginLeft="7dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textStyle="bold"

            android:text="Loại" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight="2"
            android:layout_marginLeft="7dp"
            android:text="Ngày" />
    </LinearLayout>

    <ListView
        android:id="@+id/baocao_listv_dsthuchi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#68C532"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:dividerHeight="1dp"
        tools:listitem="@layout/baocao_layout_itemds_thuchi"/>

</LinearLayout>
