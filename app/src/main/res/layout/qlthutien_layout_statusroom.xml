<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainhd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/pink"
    tools:context=".ui.QLthutien_nguyen.statusRoom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_back_statusRoom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow_back"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Danh sách hóa đơn"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="32dp" />
        <Space
            android:layout_width="20sp"
            android:layout_height="20sp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_green_circle"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Từ ngày" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.45">
                    <EditText
                        android:id="@+id/edt_tuDate_statusRoom"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:hint="dd/mm/yyy" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.55"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:text="Đến ngày" />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.45"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edt_denDate_statusRoom"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:hint="dd/mm/yyy" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Chọn phòng: "
                        android:layout_marginEnd="8dp"/>
                    <Spinner
                        android:id="@+id/spinnerPhong_statusRoom"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Trạng thái: "
                    android:layout_marginEnd="8dp"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radi_da"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã thanh toán" />

                    <RadioButton
                        android:id="@+id/radi_chua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa thanh toán" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Tùy chọn: "
                    android:layout_marginEnd="8dp"/>
                <CheckBox
                    android:id="@+id/checkbox_showall_statusroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiển thị tất cả danh sách hóa đơn"/>
            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7F6C1"

        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="6">
        <TextView
            android:id="@+id/txtdate_statusroom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1.2"
            android:text="Ngày" />
        <ImageView
            android:id="@+id/iconSortNgay_statusroom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="start"
            android:src="@drawable/arrow_down"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="Phòng" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="Số tiền" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="start"
            android:paddingLeft="8dp"
            android:layout_weight="1.5"
            android:text="Trạng thái" />

    </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_status_statusRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/qlthutien_item_statusroom"/>
</LinearLayout>

